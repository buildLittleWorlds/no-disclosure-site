---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "A manifesto for creative autonomy in the age of AI", image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Against Disclosure</title>

    <style is:global>
      @import url('https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400&family=Inter:wght@300;400;500;600&display=swap');

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        /* Deep, rich tones matching the artwork */
        --burgundy: #5a3a2a;
        --dark-burgundy: #2a1810;
        --black: #0f0a08;
        --warm-beige: #d9c7a8;
        --light-beige: #ebe3d5;
        --accent-gold: #c9a567;
        --warm-amber: #e6b054;
        --deep-sepia: #3d2817;

        /* Additional palette from images */
        --shadow-brown: #1a1208;
        --lamplight-gold: #f5d98a;
      }

      body {
        font-family: 'Crimson Text', serif;
        background-color: var(--light-beige);
        color: var(--dark-burgundy);
        line-height: 1.7;
      }

      h1, h2, h3, h4, h5, h6 {
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        line-height: 1.3;
      }

      a {
        color: var(--burgundy);
        text-decoration: none;
        transition: color 0.3s ease;
      }

      a:hover {
        color: var(--accent-gold);
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
